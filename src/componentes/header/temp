/* ------------------------------------MEDIA-------------------------------- */
/* Estilos para media queries */
@media (max-width: 768px) {
    .navbar {
        flex-direction: column;
        /* Cambia a diseño vertical para pantallas pequeñas */
    }

    ul {
        flex-direction: column;
        /* Cambia el diseño a vertical */
        align-items: flex-start;
        /* Alinea los elementos al inicio */
    }

    .cart {
        align-self: flex-end;
        /* Mueve el carrito hacia el final */
    }
}

/* Media queries para reducir el tamaño del logo en pantallas más pequeñas */
@media (max-width: 1024px) {
    .logo {
        max-width: 200px;
        /* Reduce el tamaño máximo */
        width: 25%;
        /* Ajusta la proporción */
    }
}

@media (max-width: 768px) {
    .logo {
        max-width: 150px;
        /* Más pequeño en pantallas de tabletas */
        width: 20%;
        /* Ajusta la proporción para tabletas */
    }
}

@media (max-width: 480px) {
    .logo {
        max-width: 100px;
        /* Más pequeño para pantallas de móviles */
        width: 15%;
        /* Ajusta la proporción para móviles */
        margin-right: 20px;
        /* Reduce el margen para mantener el espacio */
    }
}





